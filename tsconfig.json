{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"],
        "utils/*": ["utils/*"],
        "commands/*": ["commands/*"]
      }
    },
    "include": [
      "./cli.ts",
      "./commands/**/*.ts",
      "./utils/**/*.ts"
    ],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
  